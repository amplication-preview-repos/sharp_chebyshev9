datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  agentsItems Agents[]
  createdAt   DateTime @default(now())
  email       String?  @unique
  firstName   String?
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  lastName    String?
  password    String
  roles       Json
  updatedAt   DateTime @updatedAt
  username    String   @unique
}

model Transactions {
  amount          Float?
  buyer           String?
  createdAt       DateTime    @default(now())
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  property        Properties? @relation(fields: [propertyId], references: [id])
  propertyId      String?     @db.ObjectId
  seller          String?
  transactionDate DateTime?
  updatedAt       DateTime    @updatedAt
}

model Listings {
  createdAt DateTime @default(now())
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  updatedAt DateTime @updatedAt
}

model Properties {
  address           String?
  createdAt         DateTime                 @default(now())
  id                String                   @id @default(auto()) @map("_id") @db.ObjectId
  image             Json?
  imageGallery      Json?
  numberOfBathrooms Int?
  numberOfBedrooms  Int?
  price             Float?
  size              Int?
  transactionsItems Transactions[]
  typeField         EnumPropertiesTypeField?
  updatedAt         DateTime                 @updatedAt
  video             Json?
}

model Agents {
  agency        String?
  createdAt     DateTime @default(now())
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  licenseNumber String?
  updatedAt     DateTime @updatedAt
  user          User?    @relation(fields: [userId], references: [id])
  userId        String?  @db.ObjectId
}

model Users {
  createdAt DateTime       @default(now())
  email     String?
  firstName String?
  id        String         @id @default(auto()) @map("_id") @db.ObjectId
  lastName  String?
  role      EnumUsersRole?
  updatedAt DateTime       @updatedAt
}

enum EnumPropertiesTypeField {
  Option1
}

enum EnumUsersRole {
  Option1
}
